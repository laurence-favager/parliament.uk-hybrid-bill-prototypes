extends ../../layouts/layout-beta.pug

block content
  #content.hero.theme--grey-4
    .container
      h1
        span Petition online
        span.sr-only.
        span.context Object to the Second Additional Provision (AP2) to the High Speed Rail (West Midlands to Crewe) Bill

      h2.typography--light Step 2 of 5

  section
    .container
      h2 Who are you submitting a petition for?
      +form(id='submitterType' action='page05-1.html')
        .block--border__bottom
          +fieldset('Who are you submitting a petition for?', 'sr-only')
            ol.list--block
              li
                +radio--checkbox__verbose('radio', 'submitter-type', 'ind', 'You are submitting a petition for one person.', 'Individual')(data-route='page05-1.html', checked)
              li
                +radio--checkbox__verbose('radio', 'submitter-type', 'grp', 'You are submitting a petition for a group of people.', 'Group of individuals')(data-route='page05-2.html')
              li
                +radio--checkbox__verbose('radio', 'submitter-type', 'org', 'You are submitting a petition for a business or organisation.', 'Organisation')(data-route='page05-3.html')
              li
                +radio--checkbox__verbose('radio', 'submitter-type', 'orgs', 'You are submitting a petition for a group of businesses or organisations.', 'Group of organisations')(data-route='page05-4.html')

        +button('Next', 'btn--primary', 'submit')

        p #[+link('page03.html', 'Back')]
