extends ../../layouts/layout.pug

block content
  .section--primary#content
    .container
      h1 Petition New Motorway Bill

  section
    .container
      h2 Representative's details
      +form('page07.html')
        +input--text('name', 'txtAgtName', 'Full name')(required)
        +input--text('address', 'txtAgtAddress1', 'Address line 1')(required)
        +input--text('address', 'txtAgtAddress2', 'Address line 2')
        +input--text('post code', 'txtAgtPostCode', 'Post code')(required)
        +input--text('email', 'txtAgtEmail', 'Email')(required)
        +input--text('phone', 'txtAgtPhone', 'Phone')

        h2 Organisation's details
        p Please provide details for the business or organisation you're representing.

        +input--text('organisation name', 'txtOrgName', 'Organisation name')(required)
        +input--text('address', 'txtOrgAddress1', 'Address line 1')(required)
        +input--text('address', 'txtOrgAddress2', 'Address line 2')
        +input--text('post code', 'txtOrgPostCode', 'Post code')(required)

        h2 Details of individual in organisation
        
        +input--text('contact name', 'txtOrgName', 'Contact name')(required)
        +input--text('email', 'txtOrgEmail', 'Contact Email address')(required)
        +input--text('phone', 'txtOrgPhone', 'Contact Telephone number')
        
        br  
        +button('Next', 'btn--primary')
      br
      p #[+link('page04.html', 'Back')]
