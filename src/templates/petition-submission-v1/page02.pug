extends ../../layouts/layout.pug

block content
  .section--primary#content
    .container
      h1 Petition New Motorway Bill

  section
    .container
      h2 Who is submitting this petition?
      +form(id='submitterType' action='page04-1.html')
        +fieldset('Who are you submitting a petition for?', 'sr-only')
          ol.list--block
            li
              +radio--checkbox__verbose('radio', 'submitter-type', 'ind', 'You are submitting a petition for yourself.', 'Individual')(data-route='page04-1.html', checked)
            li
              +radio--checkbox__verbose('radio', 'submitter-type', 'grp', 'You are submitting a petition for a group of people.', 'Group of individuals')(data-route='page04-2.html')
            li
              +radio--checkbox__verbose('radio', 'submitter-type', 'org', 'You are submitting a petition for an organisation.', 'Organisation')(data-route='page04-3.html')
            li
              +radio--checkbox__verbose('radio', 'submitter-type', 'agt', 'You are submitting a petition on behalf of someone else.', 'Representative / Agent')(data-route='page03.html')

        +button('Next', 'btn--primary')
      br
      p #[+link('page01.html', 'Back')]
